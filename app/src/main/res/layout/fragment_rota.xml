<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<Spinner
    android:id="@+id/spinnerTurno"
    android:layout_width="match_parent"
    android:layout_height="58dp" />

<com.google.android.gms.maps.MapView
    android:id="@+id/mapView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>

<EditText
    android:id="@+id/editTextEnderecoDestino"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="EndereÃ§o de Destino"
    android:inputType="textPostalAddress" />

<Button
    android:id="@+id/buttonGerarRota"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gerar Rota" />

<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recyclerViewAlunos"
android:layout_width="match_parent"
android:layout_height="wrap_content"

app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

<TextView android:id="@+id/textViewLinkRota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Link da Rota:" />

<Button
android:id="@+id/buttonNavegar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Navegar"

android:visibility="gone"/>

    </LinearLayout>